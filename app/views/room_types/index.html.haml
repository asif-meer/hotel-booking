.float-left
  = render 'home/admin_links'
.float-right
  .container_16
    %h3 Room types
    .block-border
      .block-content

        %table.roomlist{:cellspacing => 0}
          - @room_types.each do |room_type|
            %tr
              %th{:scope => 'row'}= room_type.name
              %td
                = room_type.facilities
                /= link_to 'Show', room_type
                = link_to 'Edit', edit_room_type_path(room_type)
                = link_to 'Delete', room_type, :confirm => 'Are you sure?', :method => :delete
      %br
      = link_to 'New Room type', new_room_type_path